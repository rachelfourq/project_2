<div class="container">
	<div class="row">
        <div class="col m8 offset-m2">
       
          <div class="card white">
                <img src="<%= data.image %>" class="circle">
    
            <div class="card-content black-text">
              <span class="card-title black-text"><%=data.title %></span>
              <p>$<%= data.price %></p>
            </div>
            <div class="card-action">
              <a class="waves-effect white modal-trigger" href="#modal1"><i class="material-icons grey-text">comment</i> +Comment</a>
            </div>     
        </div>
    </div>
</div>

 
<div id="modal1" class="modal">
    <div class="modal-content">
      <h4>+ Comment</h4>
    <form action="/favorites/comment" method="POST" role="form">
      	<textarea id="textarea1" name="text" class="materialize-textarea"></textarea>
      	  <h4>+ Rating</h4>
      	<div class="radio_btn">  
	      <input name="group1" type="radio" id="test1" />
	      <label for="test1">1</label>

	      <input name="favoriteId" type="hidden" value="<%= data.id %>" />
	
	      <input name="group1" type="radio" id="test2" />
	      <label for="test2">2</label>
	
	
	      <input name="group1" type="radio" id="test3" />
	      <label for="test3">3</label>
	 
	      <input name="group1" type="radio" id="test4" />
	      <label for="test4">4</label>
	 
	      <input name="group1" type="radio" id="test5" />
	      <label for="test5">5</label>
	    </div>
    	<div class="modal-footer">
      	<input type="submit" value="Submit" class=" modal-action modal-close waves-effect waves-green btn-flat">
      </div>
    </form>
    </div>
</div>


<div class="container">
	<div class="row">
        <div class="col l12 offset-l">
			<h4>Comments:</h4>
			<ul class="collection">
 			<% comments.forEach(function(comment){ %>
  	   			<li class="collection-item avatar">
      			<img src="<%= userPic %>" alt="" class="circle">
      			<h6><%= comment.text %>
		      	</h6>
		      	</li>
			<% }) %> 
			</ul>
		</div>
	</div>
</div>   
